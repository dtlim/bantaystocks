<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bantaystocks_homescreen_stock_item_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/bantaystocks_homescreen_stock_item_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/bantaystocks_color_homescreen_text"
        android:textSize="@dimen/bantaystocks_dimen_text_size_36"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical"
        android:gravity="center|end">

        <TextView
            android:id="@+id/bantaystocks_homescreen_stock_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bantaystocks_color_homescreen_text"
            android:textSize="@dimen/bantaystocks_dimen_text_size_16"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bantaystocks_homescreen_stock_item_percent_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/bantaystocks_ticker_up"
            android:textColor="@color/bantaystocks_color_homescreen_text"
            android:textSize="@dimen/bantaystocks_dimen_text_size_12"
            android:gravity="center"/>

    </LinearLayout>

    <!--<ImageButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:padding="10dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@drawable/bantaystocks_icon_watch_stock_enabled" />-->

    <FrameLayout
        android:id="@+id/bantaystocks_homescreen_stock_item_close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bantaystocks_icon_close" />

    </FrameLayout>

</LinearLayout>