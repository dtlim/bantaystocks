<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bantaystocks_stock_item_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEL"
                android:textSize="@dimen/bantaystocks_dimen_text_size_20"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bantaystocks_stock_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Philippine Long Distance bla bla"
                android:textSize="@dimen/bantaystocks_dimen_text_size_12"
                android:ellipsize="end" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">

            <TextView
                android:id="@+id/bantaystocks_stock_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234.00"
                android:textSize="@dimen/bantaystocks_dimen_text_size_20"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bantaystocks_stock_item_percent_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bantaystocks_ticker_up"
                android:text="5.6%"
                android:textSize="@dimen/bantaystocks_dimen_text_size_12"
                android:gravity="center"/>

        </LinearLayout>

        <com.dtlim.bantaystocks.home.customview.BantayStockButton
            android:id="@+id/bantaystocks_stock_item_watch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/bantaystocks_icon_watch_stock_enabled"/>

    </LinearLayout>

</android.support.v7.widget.CardView>