<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bantaystocks_stock_item_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bantaystocks_color_home_text"
                android:textSize="@dimen/bantaystocks_dimen_text_size_20"
                android:textStyle="bold"
                android:text="ASDF"/>

            <TextView
                android:id="@+id/bantaystocks_stock_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bantaystocks_color_home_text"
                android:textSize="@dimen/bantaystocks_dimen_text_size_12"
                android:ellipsize="end"
                android:text="afkljdslkfjsalkfjsa"/>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">

            <TextView
                android:id="@+id/bantaystocks_stock_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bantaystocks_color_home_text"
                android:textSize="@dimen/bantaystocks_dimen_text_size_20"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bantaystocks_stock_item_percent_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bantaystocks_ticker_up"
                android:textColor="@color/bantaystocks_color_home_text"
                android:textSize="@dimen/bantaystocks_dimen_text_size_12"
                android:gravity="center"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/bantaystocks_stock_item_button_watch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:src="@drawable/bantaystocks_icon_watch_stock_disabled" />

        <ImageView
            android:id="@+id/bantaystocks_stock_item_button_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/bantaystocks_icon_home_remove" />

    </LinearLayout>

    <TextView
        android:id="@+id/bantaystocks_stock_item_last_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="top|end"
        android:textColor="@color/bantaystocks_color_home_text"
        android:textSize="@dimen/bantaystocks_dimen_text_size_8"
        android:textStyle="italic"
        android:text="as of 6/3/2016"/>

</android.support.v7.widget.CardView>